// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Admin User Model
model AdminUser {
  id           String @id @default(uuid())
  username     String @unique
  name         String
  passwordHash String

  @@map("admin_users") // Maps table name to 'admin_users' in DB
}

// Product Model
model Product {
  id            String         @id @default(uuid())
  name          String
  price         Float
  originalPrice Float?
  image         String
  categoryName  String         @map("category") // Keeping string field for backward compatibility if needed
  categoryId    String?        @map("category_id")
  category      Category?       @relation(fields: [categoryId], references: [id])
  availability  ProductAvailability
  description   String?
  inStock       Boolean        @default(true)
  isActive      Boolean        @default(true)

  @@map("products")
}

// Category Model
model Category {
  id          String    @id @default(uuid())
  name        String
  slug        String    @unique
  description String?
  order       Int       @default(0) @map("sort_order")
  isActive    Boolean   @default(true) @map("is_active")
  createdAt   DateTime  @default(now()) @map("created_at")
  products    Product[]

  @@map("categories")
}

// Product Availability Enum
enum ProductAvailability {
  pronta_entrega @map("pronta-entrega") // Map to match current string value
  por_encomenda  @map("por-encomenda")  // Map to match current string value
}

// Order Model
model Order {
  id            String        @id @default(uuid())
  items         Json          // Will store CartItem[] as JSON
  customer      Json          // Will store CustomerData as JSON
  paymentMethod PaymentMethod
  status        OrderStatus   @default(pending)
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  totalAmount   Float?
  notes         String?

  @@map("orders")
}

// Payment Method Enum
enum PaymentMethod {
  cartao
  multibanco
  mbway
  transferencia
}

// Order Status Enum
enum OrderStatus {
  pending
  confirmed
  shipped
  delivered
  cancelled
}

// Monthly Sales Model
model MonthlySales {
  id      String   @id @default(uuid())
  month   String
  year    Int
  amount  Float
  target  Float?
  notes   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([month, year]) // Ensure unique entry per month/year
  @@map("monthly_sales")
}
